<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n" />
		</Console>
		<RollingFile name="RollingFile"
			fileName="${sys:catalina.base}/logs/beyontec-medical-claim.log"
			filePattern="${sys:catalina.base}/logs/beyontec-medical-claim_%d{MM-dd-yyyy}.log.zip">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="ErrorFile"
			fileName="${sys:catalina.base}/logs/beyontec-medical-claim-errors.log"
			filePattern="${sys:catalina.base}/logs/beyontec-medical-claim-errors_%d{MM-dd-yyyy}.log.zip">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.beyon" level="debug" additivity="false">
			<AppenderRef ref="Console" level="debug" />
			<AppenderRef ref="RollingFile" level="debug" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="ErrorFile" />
		</Root>
	</Loggers>
</Configuration>